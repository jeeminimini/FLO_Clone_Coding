<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saved_song_constlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/saved_song_select_all_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:layout_marginStart="5dp"
            android:src="@drawable/btn_playlist_select_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/saved_song_select_all_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/saved_song_select_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="전체선택"
            app:layout_constraintTop_toTopOf="@id/saved_song_select_all_iv"
            app:layout_constraintStart_toEndOf="@id/saved_song_select_all_iv"
            app:layout_constraintEnd_toEndOf="@id/saved_song_select_all_iv"
            app:layout_constraintBottom_toBottomOf="@id/saved_song_select_all_iv"/>
        <ImageView
            android:id="@+id/saved_song_listen_all_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_browse_arrow_right"
            app:layout_constraintStart_toEndOf="@id/saved_song_select_all_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/saved_song_listen_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="전체듣기"
            app:layout_constraintStart_toEndOf="@id/saved_song_listen_all_iv"
            app:layout_constraintTop_toTopOf="@id/saved_song_listen_all_iv"
            app:layout_constraintBottom_toBottomOf="@id/saved_song_listen_all_iv"
            />
        <TextView
            android:id="@+id/saved_song_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="편집"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_song_music_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/saved_song_constlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_saved_song"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</androidx.constraintlayout.widget.ConstraintLayout>